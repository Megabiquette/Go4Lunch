<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/recycler_item_padding_top"
    android:paddingStart="@dimen/recycler_item_padding_start"
    android:paddingEnd="@dimen/recycler_item_padding_end">

    <ImageView
        android:id="@+id/workmates_item_avatar"
        android:layout_width="@dimen/recycler_item_image_width_and_height"
        android:layout_height="@dimen/recycler_item_image_width_and_height" />

    <TextView
        android:id="@+id/workmates_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/recycler_workmate_text_margin_start"
        android:textSize="@dimen/restaurant_card_name_size"
        android:layout_marginTop="15dp"/>

</LinearLayout>