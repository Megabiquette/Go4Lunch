<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_list_recycler_view_item_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/recycler_item_padding_top"
    android:paddingStart="@dimen/recycler_item_padding_start"
    android:paddingEnd="@dimen/recycler_item_padding_end">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/recycler_item_margin_end">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recycler_item_margin_bottom">

            <TextView
                android:id="@+id/fragment_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Name"/>

            <TextView
                android:id="@+id/fragment_list_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="distance"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recycler_item_margin_bottom">

            <TextView
                android:id="@+id/fragment_list_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"/>

            <ImageView
                android:id="@+id/fragment_list_item_people_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"/>

            <TextView
                android:id="@+id/fragment_list_item_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:text="(2)"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_list_item_opening_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Opening hours"/>

            <ImageView
                android:id="@+id/fragment_list_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/fragment_list_item_photo"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginBottom="15dp"/>
</LinearLayout>